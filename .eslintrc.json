{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["vite.config.js", "**/dist/*"],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"]
    }
}
