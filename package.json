{
	"name": "zoomtastic",
	"version": "2.0.0",
	"description": "Tiny image zoomer for web!",
	"repository": "https://github.com/Kirlovon/Zoomtastic.git",
	"homepage": "https://github.com/Kirlovon/Zoomtastic",
	"author": "Kirlovon",
	"keywords": [
		"javascript",
		"javascript-library",
		"js",
		"browser",
		"image",
		"image-viewer",
		"webpack"
	],
	"license": "MIT",
	"main": "./dist/zoomtastic.umd.js",
	"exports": "./dist/zoomtastic.umd.js",
	"types": "./dist/zoomtastic.d.ts",
	"module": "./dist/zoomtastic.umd.js",
	"scripts": {
		"build": "webpack --env.production",
		"types": "tsc zoomtastic.js --declaration --allowJs --emitDeclarationOnly --stripInternal --outDir dist",
		"dev": "webpack --env.development"
	},
	"files": [
		"dist/",
		"types/",
		"LICENSE"
	],
	"prettier": {
		"trailingComma": "es5",
		"printWidth": 200,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/preset-env": "^7.11.5",
		"babel-loader": "^8.1.0",
		"eslint": "^7.30.0",
		"prettier": "^1.19.1",
		"typescript": "^4.0.2",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	}
}
